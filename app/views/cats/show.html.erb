<table>
  <tr>
    <td>Name</td>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Age</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<% if @users_cat %>
  <%= button_to "edit", edit_cat_url, method: :get %>
<% end %>

<h3>Requests</h3>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
<% @requests.order("start_date", "end_date").each do |request| %>
  <tr>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= request.status %></td>
    <% if request.pending? && @users_cat %>
      <td><%= button_to "Approve", approve_cat_rental_request_url(request) %></td>
      <td><%= button_to "Deny", deny_cat_rental_request_url(request) %></td>
    <% end %>
  </tr>
<% end %>
</table>

<p><%= link_to "Home", cats_url %></p>
